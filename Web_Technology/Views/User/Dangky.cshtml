@model Web_Technology.Models.Khachhang
@{
    ViewBag.Title = "Dangky";
    Layout = "~/Views/Shared/_Layout_them.cshtml";
}

<h2 style="text-align:center">Đăng ký tài khoản</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Họ và tên:</label>
            <div class="col-md-10">
                @Html.EditorFor(m => m.hoten, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.hoten, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Email:</label>
            <div class="col-md-10">
                @Html.EditorFor(m => m.email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.email, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Mật khẩu:</label>
            <div class="col-md-10">
                @Html.EditorFor(m => m.matkhau, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.matkhau, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Địa chỉ:</label>
            <div class="col-md-10">
                @Html.EditorFor(m => m.diachi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.diachi, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Số điện thoại:</label>
            <div class="col-md-10">
                @Html.EditorFor(m => m.dienthoai, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.dienthoai, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Tạo tài khoản" class="btn btn-primary" />
            </div>
        </div>
    </div>
}
